<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rt_avchat_root"
    android:keepScreenOn="true"
    android:background="@drawable/bg_avchat_calling">
    <include layout="@layout/layout_avchat"/>
   <RelativeLayout
       android:id="@+id/rt_avchat_calling_head"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/tv_waitting_remind"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="36dp"
           android:layout_marginRight="36dp"
           android:layout_marginTop="80dp"
           android:gravity="center"
           android:textSize="@dimen/sp16"
           android:textColor="@color/white"
           android:text="请接听..."
           />

       <TextView
           android:id="@+id/tv_calling_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="46dp"
           android:gravity="center"
           android:drawableTop="@drawable/icon_avatar_doctor"
           android:textColor="@color/white"
           android:textSize="@dimen/sp20"
           android:layout_below="@+id/tv_waitting_remind"
           android:drawablePadding="18dp"
           tools:text="何小样"
           />

   </RelativeLayout>
    <Chronometer
        android:id="@+id/ct_avchat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ll_hangUp"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/ll_hangUp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_hangUp"
        android:drawableTop="@drawable/selector_refuse_button"
        android:text="挂断"
        style="@style/style_avchat_text_btn"/>

    <TextView
        android:id="@+id/tv_call"
        android:text="接通"
        android:drawableTop="@drawable/selector_refuse_button"
        android:layout_marginLeft="50dp"
        android:visibility="gone"
        style="@style/style_avchat_text_btn"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_mic_swicth"
        style="@style/style_avchat_text_btn"
        android:layout_toLeftOf="@+id/ll_hangUp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="@dimen/dp20"
        android:drawableTop="@drawable/selector_avchat_mic_btn"
        android:visibility="gone"
        android:text="麦克风静音"
        />
    <TextView
        android:id="@+id/tv_carmre_switch"
        style="@style/style_avchat_text_btn"
        android:layout_toRightOf="@+id/ll_hangUp"
        android:layout_marginLeft="33dp"
        android:layout_marginBottom="@dimen/dp20"
        android:drawableTop="@drawable/selector_avchat_camera_btn"
        android:visibility="gone"
        android:text="切换摄像头"
        />
</RelativeLayout>
